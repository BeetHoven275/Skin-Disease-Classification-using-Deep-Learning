import os
from pathlib import Path
import pandas as pd

DATA_DIR = Path("/home/sagemaker-user/skin-ai/data/ham10000")
META_CSV = DATA_DIR / "HAM10000_metadata.csv"

IMG_DIRS = [
    DATA_DIR / "HAM10000_images_part_1",
    DATA_DIR / "HAM10000_images_part_2",
    DATA_DIR / "ham10000_images_part_1",
    DATA_DIR / "ham10000_images_part_2",
]

print("Meta exists:", META_CSV.exists())
for d in IMG_DIRS:
    if d.exists():
        print("Found:", d)




df = pd.read_csv(META_CSV)
df.head()




def find_image_path(image_id: str) -> str | None:
    fname = f"{image_id}.jpg"
    for d in IMG_DIRS:
        p = d / fname
        if p.exists():
            return str(p)
    return None

df["image_path"] = df["image_id"].apply(find_image_path)
missing = df["image_path"].isna().sum()
print("Total:", len(df), " Missing images:", missing)

df = df.dropna(subset=["image_path"]).reset_index(drop=True)
df[["image_id", "dx", "image_path"]].head()




label_map = {
    "nv": "melanocytic_nevus",
    "mel": "melanoma",
    "bkl": "benign_keratosis",
    "bcc": "basal_cell_carcinoma",
    "akiec": "actinic_keratoses",
    "vasc": "vascular_lesion",
    "df": "dermatofibroma",
}
df["label"] = df["dx"].map(label_map).fillna(df["dx"])
print(df["label"].value_counts())





from sklearn.model_selection import train_test_split

train_df, temp_df = train_test_split(
    df, test_size=0.30, random_state=42, stratify=df["label"]
)

val_df, test_df = train_test_split(
    temp_df, test_size=0.50, random_state=42, stratify=temp_df["label"]
)

print("train:", len(train_df), "val:", len(val_df), "test:", len(test_df))
print("train dist:\n", train_df["label"].value_counts(normalize=True).round(3))




OUT_DIR = Path("/home/sagemaker-user/skin-ai/splits")
OUT_DIR.mkdir(parents=True, exist_ok=True)

train_df.to_csv(OUT_DIR / "train.csv", index=False)
val_df.to_csv(OUT_DIR / "val.csv", index=False)
test_df.to_csv(OUT_DIR / "test.csv", index=False)

print("Saved to:", OUT_DIR)


